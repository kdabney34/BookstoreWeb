@model IEnumerable<BookstoreWeb.Models.Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    <div class="card">
                        <div class="card-body">
                        <img src="@product.ImageUrl" class="card-img-top rounded"/>
                        <div class="p-1">
                            <p class="card-title h5 text-primary">@product.Title</p>
                            <p class="card-title text-info"><b>@product.Author</b></p>
                        </div>
                        <div class="p-1">
                            <p>ListPrice: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                          <div class="p-1">
                            <p>As low as: <b>$@product.Price100.ToString("0.00")</b></p>
                        </div>
                      </div>
                    </div>
                    <div>
                      <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary form-control">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>